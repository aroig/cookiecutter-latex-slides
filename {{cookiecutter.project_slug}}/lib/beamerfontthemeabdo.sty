\RequirePackage{iftex}            % Do conditionals on tex engine

\ifLuaTeX
  \RequirePackage{fontspec}
  \RequirePackage{unicode-math}
  \RequirePackage{lualatex-math}  % temporary kludge to fix some lualatex math issues.

\else
  \RequirePackage[utf8]{inputenc}
  \RequirePackage[T1]{fontenc}
\fi

\mode<presentation>

  % Prevent beamer from messing with the fonts. Got it from the professionalfonts theme.
  \beamer@suppressreplacementstrue

  % Sans serif font for text
  \setmainfont{Lato Light}[
    Ligatures=TeX,
    BoldFont={Lato Regular},
    BoldItalicFont={Lato Italic}
  ]

  \setsansfont{Lato Light}[
    Ligatures=TeX,
    BoldFont={Lato Regular},
    BoldItalicFont={Lato Italic}
  ]

  % Monospace font for code
  % \setmonofont[Scale=0.8]{Hack}
  \setmonofont{Ubuntu Mono}[
    Extension=.ttf,
    UprightFont=*-R,
    ItalicFont=*-RI,
    BoldFont=*-B,
    BoldItalicFont=*-BI
  ]

  % Default math font
  \unimathsetup{
    math-style=TeX,
    colon=literal,
    partial=literal,
    nabla=literal
  }
  
  % NOTE:
  %
  % * Need to do as few calls as possible to \setmathfont, otherwise it errors out with
  %   too many font symbols.
  %
  % * Every unicode symbol belongs to a single font. Otherwise the last one is used.
  %
  % * some symbols, like \partial in Lato, seem to only be available on the Regular
  %   version.
 
  % Unicode Ranges
  % 2190-21FF   - Arrows
  % 2200-22FF   - Mathematical symbols

  % Latin modern as default
  \setmathfont{Latin Modern Math}
  
  % Lato for maths up bf and it
  % \setmathfont{Lato Light}
  \setmathfont[range={
    up,sfup,
    \ast,\infty,
    \partial,\sum,\prod,\int,
    \lparen,\rparen,\lbrack,\rbrack,\lbrace,\rbrace
  } ]{Lato Light}
  
  \setmathfont[range={it,sfit}]{Lato Light Italic}
  \setmathfont[range={bfup,bfsfup}]{Lato Regular}
  \setmathfont[range={bfit,bfsfit}]{Lato Italic}

  % Alternate fonts for missing ranges in Lato
  \setmathfont[range={tt}]{Ubuntu Mono}
  \setmathfont[range={cal,bfcal,bb,bbit,\nabla}]{Latin Modern Math}
  \setmathfont[range={scr,bfscr,frak,bffrak}]{Asana Math}
  % \setmathfont[range={\nabla}]{XITS Math}

  % Title page
  \setbeamerfont{title}{size=\Large,shape=\bfseries,parent=structure}
  \setbeamerfont{author}{shape=\bfseries,parent=structure}
  \setbeamerfont{institute}{series=\mdseries,parent=structure}
  \setbeamerfont{date}{shape=\bfseries,parent=structure}

  % Frames
  \setbeamerfont{frametitle}{series=\bfseries}

  % Blocks
  \setbeamerfont{block title}{series=\bfseries}

  % Alert
  \setbeamerfont{alerted text}{series=\bfseries}
\mode
<all>
